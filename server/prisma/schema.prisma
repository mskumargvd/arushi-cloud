// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Uses Transaction Pooler (For scale)
  directUrl = env("DIRECT_URL")    // Uses Direct Connection (For migrations)
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  agents        Agent[]
}

model Agent {
  id              String   @id
  hostname        String?
  platform        String?
  last_seen       DateTime @default(now())
  api_key_hash    String?
  owner           User?    @relation(fields: [owner_id], references: [id])
  owner_id        String?
  stats_cpu       Float?
  stats_ram       Float?
  stats_history   AgentStat[]
  logs            Log[]
}

model AgentStat {
  id        Int      @id @default(autoincrement())
  agent     Agent    @relation(fields: [agent_id], references: [id], onDelete: Cascade)
  agent_id  String
  cpu       Float
  ram       Float
  timestamp DateTime @default(now())
}

model Log {
  id        Int      @id @default(autoincrement())
  agent     Agent?   @relation(fields: [agent_id], references: [id], onDelete: Cascade)
  agent_id  String?
  type      String   // 'command', 'alert', 'system'
  message   String
  status    String   // 'success', 'error', 'info'
  timestamp DateTime @default(now())
}
